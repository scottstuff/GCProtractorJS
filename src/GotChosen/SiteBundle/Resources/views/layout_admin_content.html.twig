{% extends 'GotChosenSiteBundle::layout_admin.html.twig' %}

{% block navbar %}
<div class="top-content-holder">
    <div class="container">
        <div class="content-nav">
            <div class="logo">
                <a href="{{ path('index') }}">
                    <img src="{{ asset('bundles/gotchosensite/images/Logo.png') }}">
                </a>
            </div>
            <div class="nav-items">
                <ul class="nav-login">
                    {% if app.user %}
                        <li><a href="{{ path('user_my_profile') }}">{{ app.user.username }}</a></li>
                        {% if is_granted("ROLE_SUPER_ADMIN") %}<li><a href="{{ path('admin_home') }}">Admin</a></li>{% endif %}
                        <li><a href="{{ path('user_profile_edit') }}">Settings</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}">Login</a></li>
                        <li><a href="{{ path('fos_user_registration_register') }}">Register</a></li>
                    {% endif %}
                </ul>

                {# links in reverse order since float: right is set
                <ul class="nav-normal">
                    <li><a href="{{ path('news') }}">News</a></li>
                    <li><a href="{{ path('video_scholarship') }}">Video Scholarship</a></li>
                    <li><a href="{{ path('monthly_scholarship') }}">Monthly Scholarship</a></li>
                    <li><a href="{{ path('evolution_games') }}">Evolution Games</a></li>
                    <li><a href="{{ path('scholarship') }}">$20K Scholarship</a></li>
                </ul>
                #}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block body %}

    <div class="content">
        <div class="main padded wide profile">
            <div class="row">
                <div class="span3">
                    {% include 'GotChosenSiteBundle:Admin:leftnav.html.twig' %}
                </div>

                <div class="span9">
                    <div class="shadowed-box property-edit">
                        <h2 class="box-title">{% block box_title %}{% endblock %}</h2>

                        <div class="box-body">
                            {% block box_body %}{% endblock %}
                        </div>

                        <div class="box-footer">
                            {% block box_footer %}{% endblock %}
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
