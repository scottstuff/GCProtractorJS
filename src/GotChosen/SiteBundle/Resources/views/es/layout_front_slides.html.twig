{% extends 'GotChosenSiteBundle::layout_front.html.twig' %}

{% block navbar %}
<div class="top-slides-holder">
    <div class="container">
        <div class="slides-nav">
            <div class="logo">
                <a href="{{ path('home') }}">
                    <img src="{{ asset('bundles/gotchosensite/images/Logo.png') }}">
                </a>
            </div>
            <div class="nav-items">
                <ul class="nav-login">
                    {% if app.user %}
                        <li><a href="{{ path('user_my_profile') }}">{{ app.user.username }}</a></li>
                        <li><a href="{{ path('user_profile_edit') }}">Settings</a></li>
                        <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                    {% else %}
                        <li><a href="{{ path('fos_user_security_login') }}">Ingresar</a></li>
                        <li><a href="{{ path('fos_user_registration_register') }}">Registrarme</a></li>
                    {% endif %}
                </ul>
            </div>
        </div>

        <div class="slides-content">
            <div class="slides-left">
                <div class="slideshow">
                    <img alt="" src="{{ asset('bundles/gotchosensite/images/student1.png') }}"
                         style="height: 450px; margin-left: 85px;" />
                    <img alt="" src="{{ asset('bundles/gotchosensite/images/student2.png') }}"
                         style="width: 600px; margin-top:36px;" />
                    <img alt="" src="{{ asset('bundles/gotchosensite/images/student3.png') }}"
                         style="height: 450px; " />
                </div>
            </div>
            <div class="slides-right">
                <div class="stretch-up">
                    <div>
                    <a href="{{ path('evolution_games') }}">
                        <img alt="" src="{{ asset('bundles/gotchosensite/images/evolution_scholarship_home.png') }}" style="height:79px;">
                    </a>
                    </div>
                    <div>
                    <a href="{{ path('scholarship') }}">
                        <img alt="" src="{{ asset('bundles/gotchosensite/images/20K_give_away_blue.png') }}"
                             style="height:158px">
                    </a>
                    </div>
                    <div>
                    <a href="{{ path('monthly_scholarship') }}">
                        <img alt="" src="{{ asset('bundles/gotchosensite/images/monthlyhome.png') }}"
                                style="height:79px;">
                    </a>
                    </div>
                    <div class="register-now" onclick="self.location.href = '{{ path('fos_user_registration_register') }}';"></div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}

    {% javascripts '@GotChosenSiteBundle/Resources/public/js/jquery.cycle.all.min.js' %}
    <script src="{{ asset_url }}"></script>
    {% endjavascripts %}

    <script>
        $(function() {
            $('.slideshow').cycle({fx: 'scrollLeft', timeout: 5000});
        });
    </script>
{% endblock %}
